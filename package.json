{
  "name": "plasticine",
  "description": "A client side server mock",
  "version": "0.1.2",
  "homepage": "https://github.com/dfournier/plasticine",
  "scripts": {
    "init": "bower install && npm install",
    "test": "npm run init && export BROCCOLI_ENV=development && broccoli serve",
    "build": "npm run init && rm -rf dist && export BROCCOLI_ENV=production && broccoli build dist"
  },
  "engines": {
    "node": "0.10.24"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dfournier/plasticine.git"
  },
  "author": {
    "name": "David Fournier",
    "email": "fr.david.fournier@gmail.com"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/dfournier/plasticine/blob/master/LICENSE-MIT"
    }
  ],
  "dependencies": {
    "sinon"                    : "1.12.1"
  },
  "devDependencies": {
    "broccoli"                 : "0.13.3",
    "broccoli-writer"          : "0.1.1",
    "broccoli-coffee"          : "0.3.0",
    "broccoli-merge-trees"     : "0.2.1",
    "broccoli-static-compiler" : "0.2.1",
    "broccoli-requirejs"       : "0.1.0",
    "broccoli-replace"         : "0.2.0",
    "broccoli-wrap"            : "0.0.2",
    "broccoli-env"             : "0.0.1",
    "moment"                   : "2.8.4"
  }
}
